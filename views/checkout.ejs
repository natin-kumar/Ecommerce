<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <title>Checkout</title>
</head>
<body>
  <%-include('navbar')%>
  <div class="container mt-5">
    <h2>Checkout</h2>
    
      <div class="form-group">
        <label for="customerName">Customer Name:</label>
        <input type="text" class="form-control" id="customerName" name="customerName" value="<%=username%>" readonly required>
      </div>
      <div class="form-group">
        <label for="customerEmail">Email:</label>
        <input type="email" class="form-control" id="customerEmail" name="customerEmail" value="<%=mail%>" readonly required>
      </div>
      <div class="form-group">
        <label for="customerAddress">Address:</label>
        <textarea class="form-control" id="customerAddress" name="customerAddress" required></textarea>
      </div>
      
      <div class="mb-4">
        <h4 id="amount">Total Amount: $<%= totalAmount %></h4>
      </div>

      <div class="form-group">
        <label for="paymentMethod">Payment Method:</label>
        <select class="form-control" id="paymentMethod" name="paymentMethod">
          <option value="creditCard">Credit Card</option>
          <option value="debitCard">Debit Card</option>
          <option value="paypal">PayPal</option>
        </select>
      </div>

      <button id="pay" type="submit" class="btn btn-success mb-5">Pay Now</button>
  
    </div>
    <%-include('footer')%>
    <script src="/javascripts/navbar.js"></script>
    <script src="../javascripts/checkout.js"></script>
</body>
</html>
