<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="./stylesheets/home.css">
  <title>Shoezzy</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
  <%-include('navbar')%>

  <div class="maincontainer">
    <%if(products.length>0){%>
    <div class="container">
      <% products.forEach(function(product) { %>
        <%if(!product.disable){%>
        <div class="card" id="<%= product._id%>">
          <img src="<%= product.img %>" alt="<%= product.name %>" class="images">
          <h3 class="productName"><%= product.name %></h3>
          <h5 class="productPrice">Price: <%= product.price %></h5>
          <div class="CardButton">
            <input type="button" name="addToCart" class="addToCart" value="Add to Cart">
            <input type="button" name="desc" class="desc" value="Description">
          </div>
        </div>

      <%} }) %>
    </div>
    <input type="button" name="showmore" id="showmore" value="Show more..">
    <%}%>
  </div>
  <%-include('footer')%>

  <script src="/javascripts/home.js"></script>
  <script src="/javascripts/navbar.js"></script>

</body>
</html>
